{
  "name": "@kizuna/server",
  "version": "0.1.0",
  "private": true,
  "main": "dist/index.js",
  "type": "commonjs",
  "scripts": {
    "dev": "concurrently \"npm run dev:gateway\" \"npm run dev:template\" \"npm run dev:user-managment\"",
    "dev:gateway": "ts-node-dev --respawn gateway/src/app.ts",
    "dev:template": "ts-node-dev --respawn services/template/app.ts",
    "dev:user-managment": "ts-node-dev --respawn services/user-managment/app.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint src/**/*.ts"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "http-proxy-middleware": "^3.0.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/node": "^20.3.1",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "concurrently": "^9.1.2",
    "eslint": "^8.43.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.3"
  }
}
